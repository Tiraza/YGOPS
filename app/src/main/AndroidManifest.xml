<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.extractor.ygops">

    <application
        android:name=".application.YgoPS"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.activity.SplashScreen"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.MainActivity"
            android:label="@string/title_activity_main" />
        <activity
            android:name=".view.activity.MatchRegisterActivity"
            android:label="@string/title_activity_match_register" />
        <activity
            android:name=".view.activity.DeckRegisterActivity"
            android:label="@string/title_activity_deck_register" />
        <activity
            android:name=".view.activity.PlayerRegisterActivity"
            android:label="@string/title_activity_player_register" />
    </application>

</manifest>
