<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.extractor.ygops" >

    <application
        android:name=".application.YgoPS"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".view.activity.Main"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name=".view.activity.Splash"
            android:label="@string/title_activity_splash_screen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.Decks"
            android:label="@string/title_activity_decks" >
        </activity>
        <activity
            android:name=".view.activity.Players"
            android:label="@string/title_activity_players" >
        </activity>
        <activity
            android:name=".view.activity.Matches"
            android:label="@string/title_activity_matches" >
        </activity>
    </application>

</manifest>
